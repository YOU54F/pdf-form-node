{
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "src",
    "target": "es2016",
    "moduleResolution": "node",
    "strict": true,
    "module": "commonjs",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "src",
  },
  "include": ["**/*.ts"],
  "exclude": [".serverless", ".webpack", "node_modules"]
}
